{
    "name": "spiral/writeaway",
    "type": "library",
    "description": "PHP API server for Writeaway editor",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "spiral/helpers": "^1.0",
        "spiral/framework": "^3.0.1",
        "spiral/cycle-bridge": "^2.0",
        "doctrine/collections": "^1.7",
        "ext-imagick": "*",
        "spiral/validator": "^1.0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.24",
        "spiral/code-style": "^1.1",
        "spiral/nyholm-bridge": "^1.2",
        "vimeo/psalm": "^4.27.0"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Writeaway\\": "src/",
            "Spiral\\": "spiral/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Writeaway\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
